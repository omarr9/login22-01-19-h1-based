<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="10dp"
    tools:context=".MainActivity_Card_Date">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose Date"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/dates"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:layout_editor_absoluteX="16dp">

    </androidx.recyclerview.widget.RecyclerView>

    <RelativeLayout
        android:id="@+id/layout_container_buttons"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dates">

        <Button
            android:id="@+id/b1"
            android:layout_width="75dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"


            android:text="8:00 AM"></Button>

        <Button
            android:id="@+id/b2"
            android:layout_width="75dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/b1"
            android:text="8:30 AM"

            ></Button>

        <Button
            android:id="@+id/b3"
            android:layout_width="75dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/b2"
            android:text="9:00 AM"></Button>

        <Button
            android:id="@+id/b4"
            android:layout_width="75dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/b3"
            android:text="9:30 AM"></Button>

        <Button
            android:id="@+id/b5"
            android:layout_width="75dp"
            android:layout_height="60dp"
            android:layout_below="@id/b1"
            android:layout_marginLeft="10dp"
            android:text="10:00 AM"></Button>

        <Button
            android:id="@+id/b6"
            android:layout_width="75dp"
            android:layout_height="60dp"
            android:layout_below="@id/b2"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/b5"
            android:text="10:30 AM"

            ></Button>

        <Button
            android:id="@+id/b7"
            android:layout_width="75dp"
            android:layout_height="60dp"
            android:layout_below="@id/b3"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/b6"
            android:text="11:00 AM"></Button>

        <Button
            android:id="@+id/b8"
            android:layout_width="75dp"
            android:layout_height="60dp"
            android:layout_below="@id/b4"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/b7"
            android:text="11:30 AM"></Button>

        <Button
            android:id="@+id/b9"
            android:layout_width="75dp"
            android:layout_height="60dp"
            android:layout_below="@id/b5"
            android:layout_marginLeft="10dp"
            android:text="1:00 MM"></Button>

        <Button
            android:id="@+id/b10"
            android:layout_width="75dp"
            android:layout_height="60dp"
            android:layout_below="@id/b6"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/b9"
            android:text="1:30 PM"></Button>\

        <Button
            android:id="@+id/b11"
            android:layout_width="75dp"
            android:layout_height="60dp"
            android:layout_below="@id/b7"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/b10"
            android:text="2:00 PM"></Button>

        <Button
            android:id="@+id/b12"
            android:layout_width="75dp"
            android:layout_height="60dp"
            android:layout_below="@id/b8"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/b11"
            android:text="2:30 PM"></Button>

        <Button
            android:id="@+id/b13"
            android:layout_width="75dp"
            android:layout_height="60dp"
            android:layout_below="@id/b9"
            android:layout_marginLeft="10dp"
            android:text="3:00 MM"></Button>

        <Button
            android:id="@+id/b14"
            android:layout_width="75dp"
            android:layout_height="60dp"
            android:layout_below="@id/b10"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/b13"
            android:text="3:30 PM"></Button>\

        <Button
            android:id="@+id/b15"
            android:layout_width="75dp"
            android:layout_height="60dp"
            android:layout_below="@id/b11"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/b14"
            android:text="4:00 PM"></Button>

        <Button
            android:id="@+id/b16"
            android:layout_width="75dp"
            android:layout_height="60dp"
            android:layout_below="@id/b12"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/b15"
            android:text="4:30 PM"></Button>
    </RelativeLayout>

    <TextView
        android:id="@+id/feedback"
        android:layout_width="335dp"
        android:layout_height="69dp"
        android:layout_marginStart="28dp"
        android:layout_marginBottom="124dp"
        android:text="FeedBack"
        android:textSize="16sp"
        android:textColor="@color/redbutton"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/confirm"
        android:layout_width="150dp"
        android:layout_height="65dp"
        android:layout_marginBottom="40dp"
        android:text="Confirm !"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        android:textAllCaps="false"></Button>


</androidx.constraintlayout.widget.ConstraintLayout>